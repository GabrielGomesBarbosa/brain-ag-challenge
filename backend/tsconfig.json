{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": "./src", 
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"]
}
